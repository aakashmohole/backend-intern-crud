              "mode": "raw",
              "raw": "{\n    \"content\": \"Great post!\"\n}"
            },
            "url": { "raw": "http://localhost:8000/api/posts/1/comment", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api","posts","1","comment"] }
          }
        },
        {
          "name": "Get Post Comments",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:8000/api/posts/1/comments", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api","posts","1","comments"] }
